@model TelefonRehberi.WebUI.Areas.Admin.Models.DepartmanListVM

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Departman Adı</th>
        <th>Departman Manager</th>
    </tr>

@foreach (var item in Model.Departmans) {
    <tr>
        <td>@item.DepartmanName</td>
        <td>@item.DepartmanManager</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
            @Html.ActionLink("Details", "Details", new {  id=item.Id  }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })
        </td>
    </tr>
}

</table>
